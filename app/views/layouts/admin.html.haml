!!!Strict
%html
  %head
    %title=h(yield(:title) || "Untitled")

    = stylesheet_link_tag "admin", "menu", 'admin/nav_bar/style'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

    /= BluePrint - Framework CSS
    = stylesheet_link_tag "blueprint/screen", :media => "screen, projection"
    = stylesheet_link_tag "blueprint/print", :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie.css', :media => 'screen, projection'

  %body
    = render 'layouts/admin/header'

    %div{:class => "main_container round", :id => "main_container"}
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      = content_tag :h1, yield(:title) if show_title?

      = yield

