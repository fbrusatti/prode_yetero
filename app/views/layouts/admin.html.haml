!!!Strict
%html
  %head
    %title=h(yield(:title) || "Untitled")
    = stylesheet_link_tag "admin", "menu"
    = stylesheet_link_tag 'admin/nav_bar/style'

    = javascript_include_tag :defaults


    = csrf_meta_tag
    = yield(:head)

    / *************************************************************************
    / BluePrint CSS Framework 
    / ************************************************************************* 
    = stylesheet_link_tag 'blueprint/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'blueprint/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'blueprint/ie.css', :media => 'screen, projection'


    / *************************************************************************
    / These ones are to get BluePrint CSS Framework through compass
    / ************************************************************************* 
    =# stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    =# stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    / *************************************************************************
    / These lines are to get working fancybuttons http://brandonmathis.com/projects/fancy-buttons/
    / *************************************************************************
    /[if lt IE 7]
      = stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/buttons.css', :media => 'screen, projection'

    = stylesheet_link_tag 'compiled/customizations.css'

  %body.bp
    = render 'layouts/admin/header'

    %div{:class => "main_container round", :id => "main_container"}
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      = content_tag :h1, yield(:title) if show_title?

      = yield

